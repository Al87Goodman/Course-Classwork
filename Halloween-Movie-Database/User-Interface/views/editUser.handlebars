<!doctype html>


<h2 align="center">Admin Users Edit Page</h2>


<div class="container"> 
  <h3>Edit {{user.uname}} Page</h3>
  <h5> User id: {{user.id}}</h5>
  <h5> Account Created: {{user.date_created}}</h5>
</div>


<div class="container">
<form id="editUser" method="POST" action="/editUser">
  <div class="form-group">
    <label for="uname">Username</label>
    <input type="text" class="form-control" name="uname" id="uname_U" value="{{user.uname}}" required>
  </div>
  <div class="form-group">
    <label for="fname">First Name</label>
    <input type="text" class="form-control" name="fname" id="fname_U" value="{{user.fname}}">
  </div>
  <div class="form-group">
    <label for="lname">Last Name</label>
    <input type="text" class="form-control" name="lname" id="lname_U" value="{{user.lname}}">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name="email" id="email_U" value="{{user.email}}" required>
  </div>
    <input type="hidden" class="form-control" name="userID" id="userID" value="{{user.id}}">
</form> 
<button class="btn btn-primary" onclick="updateUserDev({{user.id}})">Update</button>
<a href="/devUsers" class="btn btn-secondary button" role="button">Cancel</a>
</div>


<div class="container-fluid">
<h4>User Watchlist:</h4>
<div class="scroll">
<table class=" watchTable table table-sm table-hover">
    <thead class="thead-light"> 
        <th scope="col">Movite Title</th> 
        <th scope="col">Date Added</th>
        <th scope="col">Remove</th> 
    </thead> 
    <tbody>
        {{#each watch}} 
        <tr scope="row"> 
            <td>{{title}}</td> 
            <td>{{date}}</td> 
            <td><button onclick="removeWatchlistDev({{mid}})">Remove</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</div>  

</div>


<div class="container-fluid">
  <h4>User Favorites:</h4>
  <div class="scroll">
  <table class="faveTable table table-sm table-hover">
      <thead class="thead-light"> 
          <th scope="col">Movie Title</th> 
          <th scope="col">Date Added</th> 
          <th scope="col">Remove</th>
      </thead> 
      <tbody>
          {{#each fave}} 
          <tr scope="row"> 
              <td>{{title}}</td> 
              <td>{{date_added}}</td> 
              <td><button onclick="removeFavoritesDev({{mid}})">Remove</button></td>
          </tr> 
          {{/each}} 
      </tbody> 
  </table> 
  </div>  

</div>







