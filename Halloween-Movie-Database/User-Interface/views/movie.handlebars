<html>

<h2 align="center">Halloween Movie Database</h2>
<!-- Possibly display user Name here.. and guest if not logged in -->
<div class="container">
<h3> Filter/Search Movies </h3>
<a href="/movie" class="button">Reset Filter</a> 
<!-- FILTER/SEARCH MOVIES HERE -->
<form id="filter_movieS" action="/movie/filterSubg" method="post">
	<label> Filter by Subgenre </label>
    <select id='filter_charc' name="subgenre" class="subgenre" multiple="multiple"> 
		<optgroup label="Subgenre">
        {{#each subgenre}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
		</optgroup>
    </select><br>
    <input type="submit" value="filterSubg">
 </form>

<form id="filter_movieC" action="/movie/filterCharc" method="post">
	<label> Filter by Character-Type </label>
    <select id='filter_charc' name="charctype" class="charctype" multiple="multiple"> 
		<optgroup label="Charctype">
        {{#each charctype}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
		</optgroup>
    </select><br>
    <input type="submit" value="filterCharc">
 </form>

 <form id='search_movie' action='' method=''>
    <label> Search Movie by Title:</label>
    <input id='search_title' type='text' name='search_title' value=''>
</form>
    <input type="button" value="Search" onclick="searchMovieByTitle()"> 
</div>
<hr style="width:100%; height:2px; background-color:#520ef2;" />


<div class="container-fluid">

{{#if isAuthenticated}}
    <span>USER - LOGGED IN</span>
{{else}}
   <span>USER - LOGGED OUT</span>
{{/if}}

<h4>Search Results:</h4>
<table class="table table-sm table-hover table-striped">
    <thead class="thead-light"> 
        <th scope="col">Movie Title</th> 
        <th scope="col">Year</th>
        <th scope="col">Duration</th>
        <th scope="col">Link</th>
        <th scope="col">INFO</th>
<!-- 
        <th>Watchlist</th>
        <th>Favorites</th> -->
    </thead> 
    <tbody id='movieResults'>
        {{#each movie}} 
        <tr scope="row"> 
            <td>{{title}}</td> 
            <td>{{year}}</td> 
            <td>{{duration}}</td>
            <td>{{link}}</td>
            <td><a href="/infoMovie/{{id}}">INFO</a></td>

    </tr> 
        {{/each}} 
    </tbody> 
</table>     
</div>


<link rel="stylesheet" type="text/css" href="/static/fSelect/fSelect.css">
<script src="/static//fSelect/fSelect.js"></script>	

<script>
(function($) {
    $(function() {
        $('.subgenre').fSelect();
    });
})(jQuery);
</script>

<script>
(function($) {
    $(function() {
        $('.charctype').fSelect();
    });
})(jQuery);
</script>

	


</html>
